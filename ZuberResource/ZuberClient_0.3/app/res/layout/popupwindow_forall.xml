<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/myicon"
        android:id="@+id/pop_iv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/app_icon"
        android:id="@+id/pop_close"></ImageView>
    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#123456"
        android:layout_marginTop="90dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珠宝:"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/pop_tv_1"
            />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#123456"
        android:layout_marginTop="125dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="材料:"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/pop_tv_2"
            android:text="金"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#123456"
        android:layout_marginTop="160dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款式:"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/pop_tv_3"
            android:text="款式1"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#123456"
        android:layout_marginTop="195dp"></View>

    <Button
        android:id="@+id/pop_buy"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="205dp"
        android:text="BuyBuyBuy"
        android:background="#123456"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>