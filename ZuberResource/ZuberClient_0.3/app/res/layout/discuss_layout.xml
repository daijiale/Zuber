<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/discuss_webview"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/discuss_listview"></ListView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/discuss_edit"
            android:hint="添加评论"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iconfont"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 like"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#123456"
                android:layout_marginLeft="100dp"></View>
            <Button
                android:id="@+id/discuss_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#123456"
                android:text="go to buy"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>